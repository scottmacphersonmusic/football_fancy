<h1><%= @contributor.email %>'s contributions</h1>

<ul>
  <% if @topics.any? %>
    <% @topics.each do |topic| %>
      <li>
        <%= link_to topic_path(topic) do %>
          <%= topic.title %>
        <% end %>
      </li>
    <% end %>
  <% else %>
    <li>This user hasn't contributed yet.</li>
  <% end %>
</ul>

<hr/>

<div>
  <%= link_to "Contributors", contributors_path %> |
  <%= link_to "Topics", topics_path %>
</div>
